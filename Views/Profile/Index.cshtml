@model thanhtri_2121110007.Context.User

@{
    ViewBag.Title = "My Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";  // Đảm bảo bạn đã liên kết đúng layout
}

    <div class="profile-container">
        <h3>Thông tin tài khoản</h3>
        <p><strong>Họ và tên:</strong> @Model.FirstName @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <!-- Thêm các thông tin khác nếu cần -->
    </div>

    <!-- Thêm CSS nội tuyến hoặc nhúng -->
    <style>
        .profile-container {
            background-color: #f9f9f9;
            padding: 20px;
            border-radius: 10px;
            max-width: 600px;
            margin: auto;
        }

            .profile-container h3 {
                margin-bottom: 20px;
            }

            .profile-container p {
                font-size: 16px;
                line-height: 1.5;
            }

            .profile-container strong {
                color: #333;
            }
    </style>
    </html>