@model thanhtri_2121110007.Context.User

@{
    ViewBag.Title = "Register";
}


    <section class="section-content padding-y">
        <div class="container">
            <div class="card mx-auto" style="max-width:520px; margin-top:40px;">
                <article class="card-body">
                    <header class="mb-4 text-center"><h4 class="card-title">Sign up</h4></header>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">
                            <hr />

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <!-- First Name -->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Last Name -->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Password -->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "password" } })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- IsAdmin -->
                            <div class="form-group row">
                                @Html.LabelFor(model => model.IsAdmin, htmlAttributes: new { @class = "col-md-4 col-form-label text-md-right" })
                                <div class="col-md-8">
                                    @Html.EditorFor(model => model.IsAdmin, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.IsAdmin, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <!-- Submit Button -->
                            <div class="form-group row mb-0">
                                <div class="col-md-8 offset-md-4">
                                    <button type="submit" class="btn btn-primary">
                                        Register
                                    </button>
                                </div>
                            </div>

                            <!-- Display Success/Error Message -->
                            @if (ViewBag.Message != null)
                            {
                                <div class="form-group row">
                                    <div class="col-md-8 offset-md-4">
                                        <p class="text-success">@ViewBag.Message</p>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    <div class="text-center mt-4">
                        Already have an account? <a href="@Url.Action("Login", "User")">Log In</a>
                    </div>
                </article><!-- card-body.// -->
            </div> <!-- card .// -->
        </div> <!-- container.// -->
       
</body>
</html>
